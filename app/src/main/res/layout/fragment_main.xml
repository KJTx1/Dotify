<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongListActivity" >

    <FrameLayout
        android:id="@+id/fragContainer"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorWhite"
        >

    </FrameLayout>

    <TextView
        android:id="@+id/tvBanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bannerHeight"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        android:textSize="@dimen/textSize"
        android:background="#FFFFFF"
        android:paddingLeft="@dimen/bannerPadLeft"
        android:paddingRight="@dimen/bannerPadRight"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1" />

    <Button
        android:id="@+id/btnShuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/marginRight"
        android:text="SHUFFLE"
        app:layout_constraintBottom_toBottomOf="@+id/tvBanner"
        app:layout_constraintRight_toRightOf="@+id/tvBanner"
        app:layout_constraintTop_toTopOf="@+id/tvBanner" />

</androidx.constraintlayout.widget.ConstraintLayout>