<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/screenPadding"
    tools:context=".MainActivity"
    android:id="@+id/all">

    <RelativeLayout
        android:id="@+id/llOuter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <EditText
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/loginHeight"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/usernameSize"
            android:gravity="center"
            android:text="KJTx1"
            android:background="@android:color/transparent"
            />

        <Button
            android:id="@+id/btnChangeUser"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/loginHeight"
            android:layout_alignParentEnd="true"
            android:background="@color/colorBackground"
            android:onClick="changeUser"
            android:text="CHANGE USER"
            android:paddingRight="@dimen/paddingTen"
            android:paddingLeft="@dimen/paddingTen"
            android:foreground="?selectableItemBackground" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"
        android:layout_marginTop="@dimen/coverMarginTop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llOuter"
        app:srcCompat="@drawable/goodbye" />
    
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="imageView"/>

    <TextView
        android:id="@+id/tvSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="A Way To Say Goodbye"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/songTitle"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier" />

    <TextView
        android:id="@+id/tvLyrics"
        android:layout_width="match_parent"
        android:layout_height="@dimen/creditHeight"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Seven Lions featuring Sombear, Tove Lo, Myon, Shamali, Mali"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/creditSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSongTitle" />

    <TextView
        android:id="@+id/tvNumOfPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/coverMarginTop"
        android:text="# plays"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/creditSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLyrics" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvNumOfPlay"
        android:gravity="center" >

        <ImageView
            android:id="@+id/ivSkipPre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="skipPre"
            app:layout_constraintEnd_toStartOf="@+id/ivPlay"
            app:layout_constraintRight_toLeftOf="@+id/ivPlay"
            app:srcCompat="@drawable/ic_skip_pre_foreground"
            android:layout_weight="1"
            android:foreground="?selectableItemBackground" />

        <ImageView
            android:id="@+id/ivPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playClicked"
            app:srcCompat="@drawable/ic_play_foreground"
            android:layout_weight="1"
            android:foreground="?selectableItemBackground" />

        <ImageView
            android:id="@+id/ivSkipNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="skipNext"
            app:layout_constraintStart_toEndOf="@+id/ivPlay"
            app:srcCompat="@drawable/ic_skip_next_foreground"
            android:foreground="?selectableItemBackground" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>